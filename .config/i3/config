# Startup commands

# invert scrolling
exec --no-startup-id synclient NaturalScrolling=1  VertScrollDelta=-111

# tap to click
exec --no-startup-id synclient TapButton1=1

# change background to solid black
exec --no-startup-id xsetroot -solid "#000"

# set keyboard map to portuguese
exec --no-startup-id setxkbmap pt

# start audio
exec --no-startup-id start-pulseaudio-x11

# start redshift
exec --no-startup-id "redshift -c ~/.config/redshift/redshift.conf"

# start with screen brightness at 50%
exec --no-startup-id "xbacklight -set 50"

# for whatever reason unclutter is on on startup, this fixes it
exec --no-startup-id "pkill unclutter"
